extends _layouts/master

block context
  - var title = 'Hello World';
  - var oljs = 'ol-tilt.js';

block styles
  style.
    #tilt-wrapper {
      position: absolute;
      top: 14px;
      right: 60px;
      border-radius: 4px;
      padding: 2px;
      background: rgba(255,255,255,0.4);
      height: 10px;
      line-height: 5px;
    }
    #tilt {
      -webkit-appearance: none;
      background-color: white;
      width: 100px;
      height: 4px;
      border: 0;
      font-size: 5px;
    }
    #tilt::-webkit-slider-thumb {
      -webkit-appearance: none;
      background-color: rgba(0,60,136,0.75);
      width: 10px;
      height: 10px;
      border-radius: 4px;
    }

block extra
  div#tilt-wrapper
    input#tilt(type="range", min="0", max="0.5759586531581288", step="0.08726646259971647")

block scripts
  script(src='tilt.js')
